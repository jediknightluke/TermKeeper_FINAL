<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermKeeper_FINAL.TermAdd">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,0">
            <Button Padding="5" Grid.Row="0" Grid.Column="0" Text="X"  HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="Transparent" Clicked="BackButtonClick"/>
            <Entry Placeholder="Term Name" x:Name="txtTermTitle"/>
            <Label Text="Start Date" />
            <DatePicker x:Name="startDatePicker" Format="D"></DatePicker>
            <Label Text="End Date" />
            <DatePicker x:Name="endDatePicker" Format="D"></DatePicker>
            <Button Text="Save" x:Name="btn_Save" HeightRequest="60" Clicked="SaveButton_Clicked" />
            <Button Text="Back" x:Name="btn_Exit" HeightRequest="60" Clicked="BackButtonClick" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>